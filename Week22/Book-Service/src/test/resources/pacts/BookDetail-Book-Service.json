{
  "consumer": {
    "name": "BookDetail"
  },
  "interactions": [
    {
      "description": "get book detail",
      "providerStates": [
        {
          "name": "book exist"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/book/get",
        "query": {
          "id": [
            "2"
          ]
        }
      },
      "response": {
        "body": {
          "id": 2,
          "name": "Basic of C++"
        },
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            }
          },
          "header": {
            "Content-Type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ]
            }
          }
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-jvm": {
      "version": "4.2.7"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "Book-Service"
  }
}
